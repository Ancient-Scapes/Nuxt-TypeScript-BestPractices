{
  "name": "nuxt-typescript-bestplactices",
  "version": "1.0.0",
  "description": "My geometric Nuxt.js project",
  "author": "Ancient-Scapes",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=local nuxt-ts --port=3003",
    "build": "cross-env NODE_ENV=production nuxt-ts build",
    "lint": "eslint --ext .ts,.js,.vue .",
    "stylelint": "stylelint '{**/**,**}/**/*.{scss,vue}'",
    "stylelint:fix": "stylelint --fix '{**/**,**}/**/*.{scss,vue}'",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@nuxt/typescript-build": "^1.0.3",
    "@nuxt/typescript-runtime": "latest",
    "@nuxtjs/vuetify": "^1.11.2",
    "cross-env": "^7.0.2",
    "epic-spinners": "^1.1.0",
    "node-sass": "^7.0.0",
    "nuxt": "latest",
    "portal-vue": "^2.1.7",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.5.0",
    "vuetify": "^2.3.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@types/jest": "^25.2.3",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "nodemon": "^1.11.0",
    "prettier": "1.14.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.17.2",
    "ts-jest": "^26.0.0",
    "vue-jest": "^3.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
